<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <ImageView
        android:id="@+id/imageView1_single2Row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/content"
        android:src="@drawable/ic_action_person" />

    <TextView
        android:id="@+id/textView1_Single2Row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1_single2Row"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageView1_single2Row"
        android:text="@string/text_here"
        android:textColor="#545452" />

    <RatingBar
        android:id="@+id/ratingbar_Single2Row"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1_Single2Row"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageView1_single2Row"
        android:isIndicator="true"
        android:numStars="5"
        android:paddingBottom="2dp"
        android:rating="1"
        android:stepSize="0.01" />

    <TextView
        android:id="@+id/textView2_Single2Row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingbar_Single2Row"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageView1_single2Row"
        android:paddingRight="2dp"
        android:text="@string/text_here"
        android:textSize="16sp" />

</RelativeLayout>