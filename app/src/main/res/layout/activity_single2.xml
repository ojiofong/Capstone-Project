<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Include statusBar here for Kitkat only here -->

    <include layout="@layout/statusbar" />

    <!-- Include ToolBar here -->

    <include layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayoutSingle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/topview"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/streetView_tv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/topview"
                    android:layout_toLeftOf="@+id/topview"
                    android:background="@drawable/selector_streetview"
                    android:clickable="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/mapView_tv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/topview"
                    android:layout_toRightOf="@+id/topview"
                    android:background="@drawable/selector_mapview"
                    android:clickable="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/streetView_tv"
                    android:layout_marginTop="5dp"
                    android:background="@color/blue_singleborder_a"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/directionimageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tvselectoraqua"
                        android:clickable="true"
                        android:contentDescription="@string/content"
                        android:src="@drawable/direction_btn" />

                    <ImageView
                        android:id="@+id/shareImageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tvselectoraqua"
                        android:contentDescription="@string/content"
                        android:src="@drawable/ic_action_share" />
                </LinearLayout>

                <TextView
                    android:id="@+id/firstDetails"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_marginBottom="5dp"
                    android:background="@color/blue_singleborder_a"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linearLayoutSingle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/firstDetails"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/textDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/tvselectoraqua"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_action_distance"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#071754"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textDriving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tvselectoraqua"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_action_driving"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#071754"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textWalking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/tvselectoraqua"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_action_walking"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#071754"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/contactDetails1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayoutSingle2"
                    android:layout_marginBottom="5dp"
                    android:background="@color/blue_singleborder_a"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:text="@string/contact_details"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imagePhone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/contactDetails1"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/content"
                    android:src="@drawable/ic_action_call" />

                <TextView
                    android:id="@+id/phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imagePhone1"
                    android:layout_toRightOf="@+id/imagePhone1"
                    android:clickable="true"
                    android:maxLines="1"
                    android:text="@string/phone"
                    android:textColor="#071754"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/imageWeb1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imagePhone1"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/content"
                    android:src="@drawable/ic_action_web_site" />

                <TextView
                    android:id="@+id/website1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageWeb1"
                    android:layout_toRightOf="@+id/imageWeb1"
                    android:clickable="true"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/text_here"
                    android:textColor="#071754"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/imageWeb2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageWeb1"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/content"
                    android:src="@drawable/ic_action_web_site" />

                <TextView
                    android:id="@+id/website2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageWeb2"
                    android:layout_toRightOf="@+id/imageWeb2"
                    android:clickable="true"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/text_here"
                    android:textColor="#071754"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/imageRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reviews1"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/content"
                    android:src="@drawable/ic_action_rating_important" />

                <TextView
                    android:id="@+id/ratingNumberTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageRating"
                    android:layout_toRightOf="@+id/imageRating"
                    android:text="@string/number_here"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#071754"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/menuHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageWeb2"
                    android:background="@color/blue_singleborder_a"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:text="@string/text_here"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/menuInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menuHeader"
                    android:text="@string/text_here" />

                <TextView
                    android:id="@+id/openingHours1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menuInfo"
                    android:layout_marginBottom="5dp"
                    android:background="@color/blue_singleborder_a"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:text="@string/opening_hours" />

                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/openingHours1"
                    android:gravity="center"
                    android:text="@string/text_here"
                    android:textColor="#071754"
                    android:textSize="16.7sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sunday"
                    android:gravity="center"
                    android:text="@string/text_here"
                    android:textColor="#071754"
                    android:textSize="16.7sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/monday"
                    android:gravity="center"
                    android:text="@string/text_here"
                    android:textColor="#071754"
                    android:textSize="16.7sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tuesday"
                    android:gravity="center"
                    android:text="@string/text_here"
                    android:textColor="#071754"
                    android:textSize="16.7sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wednesday"
                    android:gravity="center"
                    android:text="@string/text_here"
                    android:textColor="#071754"
                    android:textSize="16.7sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/friday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/thursday"
                    android:gravity="center"
                    android:text="@string/text_here"
                    android:textColor="#071754"
                    android:textSize="16.7sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/friday"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="@string/text_here"
                    android:textColor="#071754"
                    android:textSize="16.7sp"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/reviews1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/saturday"
                    android:background="@color/blue_singleborder_a"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:text="@string/reviews"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/ratingbarSingle"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ratingNumberTV"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/ratingNumberTV"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:paddingBottom="2dp"
                    android:rating="1"
                    android:stepSize="0.01" />

                <ImageView
                    android:id="@+id/person1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageRating"
                    android:contentDescription="@string/content"
                    android:src="@drawable/ic_action_person" />

                <TextView
                    android:id="@+id/description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/person1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/person1"
                    android:clickable="true"
                    android:maxLines="4"
                    android:text="@string/click_here"
                    android:textColor="#071754"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/loadMoreReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_text"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/load_more"
                    android:paddingBottom="10dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="15dip"
                    android:paddingTop="7dip"
                    android:text="@string/more_reviews"
                    android:textColor="#ccc"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <View
                    android:id="@+id/emptyView"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_below="@+id/loadMoreReviews" />

                <TextView
                    android:id="@+id/statusSingle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contactDetails1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:paddingBottom="7dip"
                    android:paddingLeft="25dip"
                    android:paddingRight="25dip"
                    android:paddingTop="7dip"
                    android:text="@string/fetching_details"
                    android:textColor="#ccc"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/powered_by_google_singleact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:clickable="false"
                android:contentDescription="@string/content"
                android:src="@drawable/powered_by_google_light" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>